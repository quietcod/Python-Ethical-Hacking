{
  "version": "3.0.0",
  "name": "Recon Tool v3 - Clean Architecture",
  "description": "Professional reconnaissance toolkit with modular design",
  
  "default_settings": {
    "threads": 10,
    "timeout": 300,
    "rate_limit": 1.0,
    "verbose": false,
    "output_format": "json"
  },
  
  "logging": {
    "level": "INFO",
    "format": "structured",
    "file": "logs/recon.log",
    "rotation": "daily"
  },
  
  "tools": {
    "nmap": {
      "enabled": true,
      "default_args": ["-sS", "-O", "-sV"]
    },
    "masscan": {
      "enabled": true,
      "rate": "1000"
    },
    "subfinder": {
      "enabled": true,
      "sources": ["all"]
    },
    "nikto": {
      "enabled": true,
      "plugins": ["all"]
    },
    "gobuster": {
      "enabled": true,
      "wordlist": "/usr/share/wordlists/dirb/common.txt"
    },
    "sslscan": {
      "enabled": true
    },
    "nuclei": {
      "enabled": true,
      "templates": "all"
    }
  },
  
  "output": {
    "directory": "./recon_results",
    "timestamp_format": "%Y%m%d_%H%M%S",
    "formats": ["json", "html", "pdf"]
  }
}
